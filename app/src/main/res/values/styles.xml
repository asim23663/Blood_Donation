<resources>

    <style name="MyCustomTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MyCustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyCustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CardViewStyle">
        <item name="android:layout_width">@dimen/_110sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/cv_radius_normal</item>
        <item name="cardElevation">@dimen/cv_elevation_ex_small</item>
    </style>


</resources>
